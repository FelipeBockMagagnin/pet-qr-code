generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id        Int         @id @default(autoincrement())
  nome_dono String
  telefone  String
  email     String
  endereco  String
  nome_pet  String
  especie   String
  raca      String?
  idade     Int?
  peso      Float?
  descricao String?
  vacinas   PetVacina[]
}

model Vacina {
  id               Int         @id @default(autoincrement())
  nome_vacina      String
  especie_alvo     String
  classificacao    String
  descricao_doenca String?
  pets             PetVacina[]
}

model PetVacina {
  id             Int      @id @default(autoincrement())
  pet_id         Int
  vacina_id      Int
  data_aplicacao DateTime @default(now())
  pet            Pet      @relation(fields: [pet_id], references: [id])
  vacina         Vacina   @relation(fields: [vacina_id], references: [id])

  @@unique([pet_id, vacina_id])
}
