generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id Int @id @default(autoincrement())
  nome_dono String
  telefone String
  email String
  endereco String
  nome_pet String
  especie String
  raca String?
  idade Int?
  peso Float?
  descricao String?
}